    <div class="card shadow-none border my-4 w-100" data-component-card="data-component-card">
        <div class="container py-5 text-center" data-aos="fade-up" data-aos-delay="100">
            <div class="row gy-4 justify-content-center">

                <!-- Left Contact Info -->
                <div class="col-lg-5 d-flex justify-content-center">
                    <div class="info-wrap text-start w-100">
                            <div class="info-item d-flex justify-content-start mb-4" data-aos="fade-up" data-aos-delay="200">
                            <i class="bi bi-geo-alt flex-shrink-0 me-3"></i>
                            <div>
                                <h3>Address</h3>
                                <p>
                                    Max System Solution Sdn Bhd<br />
                                    No. 27, 1st Floor, Jalan Villa Tanjung,<br />
                                    Villa Tanjung, 12300 Butterworth,<br />
                                    Pulau Pinang
                                </p>
                            </div>
                        </div>
                        <div class="info-item d-flex justify-content-start mb-4" data-aos="fade-up" data-aos-delay="300">
                            <i class="bi bi-telephone flex-shrink-0 me-3"></i>
                            <div>
                                <h3>Call Us</h3>
                                <p>+60 4 3137612</p>
                            </div>
                        </div>

                        <div class="info-item d-flex justify-content-start mb-4" data-aos="fade-up" data-aos-delay="400">
                            <i class="bi bi-envelope flex-shrink-0 me-3"></i>
                            <div>
                                <h3>Email Us</h3>
                                <p>hr@maxsys.com.my</p>
                            </div>
                        </div>

                        <!-- Embedded Google Map -->
                        <div class="ratio ratio-4x3 mt-4 rounded overflow-hidden">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3971.9322254553813!2d100.38625689999999!3d5.427267299999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x304ac5ed7013568f%3A0xdef060b81b4def67!2sMax%20System%20Solution%20Sdn%20Bhd!5e0!3m2!1sen!2smy!4v1744084335866!5m2!1sen!2smy"
                                    width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
                                    referrerpolicy="no-referrer-when-downgrade" title="Company Location"></iframe>
                        </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="col-lg-7 d-flex justify-content-center">
                    <form id="form-contactSubmit" method="post" class="php-email-form text-start w-100" data-aos="fade-up" data-aos-delay="200">
                        <div class="row gy-4">
                            <div class="col-md-6">
                                <label for="name-field" class="pb-2">Your Name</label>
                                <input type="text" name="name" id="name-field" class="form-control" required />
                            </div>

                            <div class="col-md-6">
                                <label for="email-field" class="pb-2">Your Email</label>
                                <input type="email" class="form-control" name="email" id="email-field" required />
                            </div>

                            <div class="col-md-12">
                                <label for="subject-field" class="pb-2">Subject</label>
                                <input type="text" class="form-control" name="subject" id="subject-field" required />
                            </div>

                            <div class="col-md-12">
                                <label for="message-field" class="pb-2">Message</label>
                                <textarea class="form-control" name="message" rows="10" id="message-field" required></textarea>
                            </div>

                            <div class="col-md-12 text-center">
                                <div class="loading d-none">Loading...</div>
                                <div class="error-message text-danger d-none"></div>
                                <div class="sent-message text-success d-none">Your message has been sent. Thank you!</div>
                                <button type="submit" class="btn btn-primary px-4 mt-3">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

